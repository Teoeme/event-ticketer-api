{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["es6", "ES2020","DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/unit/user", "tests/unit"],
  "exclude": ["node_modules", "build"]
} 